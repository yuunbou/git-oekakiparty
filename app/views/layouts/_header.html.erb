<!-- ヘッダー -->
<header>
  <nav class="navbar navbar-expand-lg">
    <div class="container">
      <a class="navbar-brand text-light">お絵描きparty</a> <!-- 余力があればlogoのimage -->
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                    aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
        <% if user_signed_in? %> <!-- ユーザーのヘッダー -->
          <li class="nav-item m-2">
            <%= link_to "マイページ", user_path(current_user.id), class: 'btn btn-info' %>
          </li>
          <li class="nav-item m-2">
            <%= link_to "作品一覧", posts_path, class: 'btn btn-success' %>
          </li>
          <li class="nav-item m-2">
            <%= link_to "ユーザー一覧", users_path, class: 'btn btn-info' %>
          </li>
          <li class="nav-item m-2">
            <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'btn btn-secondary' %>
          </li>
        <% elsif admin_signed_in? %> <!-- 管理者のヘッダー -->
          <li class="nav-item m-2">
            <p>コメント一覧</p>
          </li>
          <li class="nav-item m-2">
            <p>投稿一覧</p>
          </li>
          <li class="nav-item m-2">
            <p>ユーザー一覧</p>
          </li>
          <li class="nav-item m-2">
            <p>ログアウト</p>
          </li>
          <% else %>
          <li class="nav-item m-2">
            <p>About</p>
          </li>
          <li class="nav-item m-2">
            <p>登録</p>
          </li>
          <li class="nav-item m-2">
            <p>ログイン</p>
          </li>
          <li class="nav-item m-2">
            <%= link_to "ゲストログイン", homes_guest_sign_in_path, method: :post, class:'btn btn-dark' %>
          </li>
        <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>