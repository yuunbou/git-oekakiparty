<div class="container">
  <div class="row">
    <div class="col-2 m-4">
      <%= image_tag @user.get_profile_image(200,200), class:"rounded-circle" %>
      <!-- ユーザプロフィール画像-->
    </div>
    <div class="col-6 m-4">
      <div class="form-group">
        <p class="h3 font-weight-bold"><%= @user.nickname %></p>
      </div>
      <div class="form-group border border-dark rounded p-1">
        <%= @user.introduction %>
      </div>
      <% if @user.id == current_user.id %>
        <%= link_to "プロフィール編集", edit_user_path(@user), class:'btn btn-success btn-sm' %>
        <%= link_to "作品を投稿する", new_post_path, class:'btn btn-info btn-sm' %>
        <p>グループ作成</p>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-11">
      <div>
        <h2>作品一覧</h2>
      </div>
      <table class="d-flex">
        <% @posts.each do |post| %>
        <tbody class="flex-row">
          <tr>
            <td>
              <%= link_to post_path(post.id) do %>
                <%= image_tag post.images[0].variant(resize: '200x200'), class: "review-img m-2" %>
              <% end %>
            </td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
  <div class="row">
    <div>

    </div>
  </div>
  <div class="row">

  </div>
</div>