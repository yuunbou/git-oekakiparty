<div class="container">
  <div class="row m-3">
    <h3>グループ一覧</h3>
  </div>
  <div class="row m-3">
    <% @groups.each do |group| %>
    <div class="form-group m-2">
      <div class="col-xs-3"><%= image_tag group.get_group_image(100,100), class: "rounded image_group" %></div>
      <h4 class="col-xs-4 border-bottom"><%= group.name %></h4>
      <p class-"col-xs-6"><%= group.content.truncate(20) %></p>
      <div class="col-xs-3 border-bottom"><%= link_to "入室", group_path(group.id), class:'btn btn-success' %></div>
    </div>
    <% end %>
    <div class="col-xs-12 mx-auto">
      <% if @groups.size == 0 %>
        <p class="text-center font-weight-bold">グループはありません</p>
      <% end %>
    </div>
    <div class="mx-auto">
      <%= paginate @groups %>
    </div>
  </div>
  <% if @user.id == current_user.id %>
  <div class="row m-3">
    <h3>所属グループ一覧</h3>
  </div>
  <div class="row m-3">
    <% @group_members.each do |group| %>
      <div class="form-group m-2">
        <div class="col-xs-3"><%= image_tag group.get_group_image(100,100), class: "rounded image_group" %></div>
        <h4 class="col-xs-4 border-bottom"><%= group.name %></h4>
        <p class-"col-xs-6"><%= group.content.truncate(30) %></p>
        <div class="col-xs-3 border-bottom"><%= link_to "入室", group_path(group.id), class:'btn btn-success' %></div>
      </div>
    <% end %>
    <div class="mx-auto">
      <%= paginate @group_members %>
    </div>
  </div>
  <% end %>
</div>