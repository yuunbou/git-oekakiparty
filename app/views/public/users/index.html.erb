<div class="container">
  <div class="row">
    <div class="col-11 mx-auto">
      <h2>ユーザー一覧</h2>
    </div>
  </div>
  <div class="row">
    <div class="co-sm-12">
      <table class="table">
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td>
              <%= link_to user_path(user.id) do %>
                <%= image_tag user.get_profile_image(100,100), class: "rounded-circle" %>
              <% end %>
            </td>
            <td><%= user.nickname %></td>
            <% @posts.each do |post| %>
            <td>
              <%= link_to post_path(post.id) do %>
                <%= image_tag post.images[0].variant(resize: '100x100'), class: "review-img card-img-top" %>
              <% end %>
            </td>
            <% end %>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>