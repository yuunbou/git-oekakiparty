<div class="container">
  <div class="row m-3">
    <div class="mx-auto col-11 col-sm-10 col-lg-8 col-xl-6">
      <div class="signup_title h2 text-center m-4">新規登録</div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <!--%= render "public/shared/error_messages", resource: resource %>-->

        <div class="form-group">
          <%= f.text_field :nickname, placeholder: "ニックネーム", required: true, autocomplete: "nickname", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.email_field :email, placeholder: "メールアドレス", required: true, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.password_field :password, placeholder: "パスワード(６文字以上)", required: true, autocomplete: "new-password", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.password_field :password_confirmation, placeholder: "パスワード(確認)", required: true, autocomplete: "new-password", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.submit "登録する", class: "btn btn-block" %>
        </div>
      <% end %>


      <div class="form-group">
        <h4 class="signup-text">登録済みの方</h4>
        <p class="signup-text"><%= render "public/shared/links" %>からログインしてください</p>
      </div>


    </div>
  </div>
</div>

