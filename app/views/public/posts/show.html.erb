
  <div class="container">
    <div class="row">
      <div class="mx-auto">
        <div class="form-group">
          <h5>詳細</h5>
          <svg>
            <% if @post.images.attached? %>
              <% @post.images.each do |image| %>
                <%= image_tag image.variant(resize: '200x200') %>
              <% end %>
            <% end %>
          </svg>
          <!-- 投稿した画像 -->
        </div>
      </div>
    </div>
    <div class="row">
      <div class="mx-auto">
        <div class="form-group">
          <!-- 画像にユーザ詳細(マイページ)リンクをつける  -->
          <svg><%= image_tag @post.user.get_profile_image(100,100) %></svg>
          <p><%= @post.user.nickname %></p>
        </div>
        <div class="form-group">
          <%= @post.title %>
          <!-- タイトル -->
        </div>
        <div class="form-group">
          <%= @post.caption %>
          <!-- キャプション -->
        </div>
        <div class="form-group">
          <%= @post.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
          <!-- 作成日時 -->
          <!-- いいね＆コメント機能を後に追加 -->
          <% if @post.favorited_by?(current_user) %>
            <p>
              <%= link_to post_favorites_path(@post), method: :delete do %>
                ♥︎<=% @post.favorites.count %>いいね
              <% end %>
            </p>
            <% else %>
            <p>
              <%= link_to post_favorites_path(@post), method: :delete do %>
                ♡<%= @post.favorites.count %>いいね
              <% end %>
            </p>
          <% end %>
        </div>
        <div class="form-group">
          <% if @user.id == current_user.id %>
            <%= link_to "編集", edit_post_path(@post.id), class: "btn btn-success btn-sm" %>
          <% end %>
          <% if @post.user == current_user %>
            <%= link_to "削除", post_path(@post.id), class: "btn btn-danger btn-sm", method: :delete, data: {confirm: "削除しますか？"} %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

