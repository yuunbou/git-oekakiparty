<div class="container">
  <div class="row">
    <div class="mx-auto col-11 col-sm-10 col-lg-8 col-xl-6">
      <div class="signin_title h2 text-center m-4">ログイン</div>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="form-group">
          <%= f.email_field :email, placeholder: "メールアドレス", autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>
         <div class="form-group">
          <%= f.password_field :password, placeholder: "パスワード", autocomplete: "current-password", class: "form-control" %>
        </div>

        <div class="form-group text-center">
          <%= f.submit "ログイン", class: "btn btn-info-login" %>
        </div>
      <% end %>

    </div>
  </div>
</div>

