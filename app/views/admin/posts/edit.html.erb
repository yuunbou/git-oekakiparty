<div class="container">
  <div class="row">
    <div class="mx-auto">
      <h2>投稿編集</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-8 mx-auto">
      <%= form_with model: @post, url: admin_post_path, method: :patch do |f| %>
        <div class="form-group">
          <p>タイトル</p>
          <%= f.text_field :title, required: true, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.text_area :caption, rows: '5', class: "form-control" %>
        </div>
        <% #NOTE: post_typeがpost_publicだったら表示する %>
        <% if @post.post_type == "post_public" %>
          <div class="form-group">
            <%= f.text_field :tag_name, value: @tag_list, class: 'form-control' %>
          </div>
        <% end %>
        <div class="form-group">
          <%= f.radio_button :is_status, :true %>
          <%= f.label :is_status, "公開", {value: :true, style: "desplay: inline-block"} %>
          <%= f.radio_button :is_status, :false %>
          <%= f.label :is_status, "非公開", {value: :false, style: "desplay: inline-block"} %>
        </div>
        <div class="form-group">
          <%= f.submit '変更を保存', class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>