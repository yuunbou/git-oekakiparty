<div class="container">
  <div class="row">
    <div class="col-2 m-4">
      <%= image_tag @user.get_profile_image(200,200), class:"rounded image_mypage" %>
    </div>
    <div class="col-sm-6 m-4">
      <div class="form-group">
        <p class="h3 font-weight-bold"><%= @user.nickname %></p>
      </div>
      <div class="form-group d-flex">
        <p class="font-width-bol flex-row mr-2">ステータス</p>
          <% if @user.is_active == true %>
            <p class="text-primary font-width-bold">有効</p>
        　<% else %>
        　  <p class="text-secondary font-width-bold">退会</p>
        　<% end %>
      </div>
      <div class="form-group border border-dark rounded p-1">
        <%= @user.introduction %>
      </div>
      <div class="d-flex flex-row">
        <%= link_to "プロフィール編集", edit_admin_user_path(@user.id), class:'btn btn-success btn-sm mx-1' %>
        <%= link_to "グループ一覧", groups_admin_user_path(@user), class:'btn btn-dark btn-sm mx-1' %>
        <%= link_to "グループ内投稿一覧", group_post_admin_user_path(@user), class:'btn btn-info btn-sm mx-1' %>
      </div>
    </div>

    <div class="col-sm-12">
      <div class="d-flex">
        <h2 class="title flex-row">作品一覧</h2>
        <div class="button offset-1 mt-2">
          <%= link_to "作品一覧", posts_admin_user_path(@user), class: "btn btn-info btn-sm" %>
        </div>
      </div>
      <table class="d-flex border-top">
        <% @posts.each do |post| %>
        <tbody class="flex-row">
          <tr>
            <td>
              <%= link_to admin_post_path(post.id) do %>
                <%= image_tag post.images[0].variant(resize: '200x200'), class: "review-img m-2" %>
              <% end %>
            </td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>