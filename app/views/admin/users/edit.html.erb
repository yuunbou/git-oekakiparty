<div class="container">
  <div class="row">
    <div class="mx-auto col-xs-11">
      <h3>プロフィール編集</h3>

      <%= form_with model: @user, url: admin_user_path, method: :patch do |f| %>

        <div class="form-group">
          <%= f.file_field :profile_image, class: "form-control-file", accept: "image/*" %>
        </div>
        <div class="form-group">
          <label for="user_name">ニックネーム</label>
          <%= f.text_field :nickname, class: "form-control name", autofocus: true, id:"user_name" %>
        </div>
        <div class="form-group">
          <label for="user-introduction">自己紹介</label>
          <%= f.text_area :introduction, rows: "6", class: "form-control introduction" %>
        </div>
        <div class="form-group">
          <label for="user-is_active">ユーザーステータス</label>
          <div>
            <%= f.radio_button :is_active, :true %>
            <%= f.label :is_active, "有効", {value: :true, style: "display: inline-block"} %>
            <%= f.radio_button :is_active, :false %>
            <%= f.label :is_active, "退会", {value: :false, style: "display: inline-block"} %>
          </div>
        </div>

        <div class="form-group">
          <%= f.submit "変更を保存する", class:"btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>